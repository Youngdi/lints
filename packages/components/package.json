{
  "name": "caddi-components",
  "version": "0.0.1",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "scripts": {
    "build": "run-p build:*",
    "build:lib": "tsc -p tsconfig.build.json",
    "build:esm": "tsc -p tsconfig.esm.build.json",
    "clean": "rimraf ./lib",
    "prepublishOnly": "run-s clean lint build",
    "format": "eslint --fix 'src/**/*.ts{,x}'",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint 'src/**/*.ts{,x}'",
    "lint:style": "stylelint 'src/**/*.ts{,x}'",
    "lint:tsc": "tsc --noEmit",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "description": "CADDi ui components built with React.",
  "repository": "git+https://github.com/caddijp/caddi-components.git",
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "^5.1.2",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.1",
    "stylelint": "^13.6.1",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
