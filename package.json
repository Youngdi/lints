{
  "name": "@caddijp/styleguide",
  "private": true,
  "repository": "ssh://git@github.com/caddijp/styleguide.git",
  "author": "Caddi Co.,Ltd",
  "license": "MIT",
  "devDependencies": {
    "can-npm-publish": "^1.3.2",
    "eslint": "^7.4.0",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "stylelint": "^13.6.1",
    "typescript": "^3.9.6"
  },
  "scripts": {
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "test": "run-p -l lint:*",
    "lint:es": "eslint .",
    "lint:style": "stylelint '**/*.scss'",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://npm.pkg.github.com/\"'",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{js,jsx,json,yml,md}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
